{
    "compileOnSave": true,
  
    "compilerOptions": {
      "downlevelIteration": true,
      "rootDirs": ["src"],
      "outDir": "dist",
      "baseUrl": ".",
      "moduleResolution": "node",
      "target": "es5",
      "module": "commonjs",
      "jsx": "react",
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "sourceMap": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "noUnusedLocals": false,
      "declaration": true,
      "declarationMap": true,
      "lib": ["esnext", "dom"],
      "types": ["node"],
    },
    "exclude": [ "dist",  "webpack", "script", "src/**/*.spec.*"],
    "include": ["src"]
}
  